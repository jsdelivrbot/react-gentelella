{
  "name": "react-gentelella",
  "version": "0.1.0",
  "description": "React implementation on Gentelella",
  "main": "build/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "git-hook": "npm run lint -s && lint-staged",
    "build": "babel src -d build",
    "build:watch": "babel src -w -d build",
    "lint": "standard --verbose | snazzy",
    "precommit": "npm run git-hook",
    "prepush": "npm run git-hook",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techisnothing/react-gentelella.git"
  },
  "author": "Ivan Ha <ivan@techisnothing.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/techisnothing/react-gentelella/issues"
  },
  "homepage": "https://github.com/techisnothing/react-gentelella#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.5.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1",
    "eslint-watch": "^3.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "polished": "^1.4.1",
    "prettier-standard": "^6.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "standard --fix",
      "git add"
    ]
  }
}
